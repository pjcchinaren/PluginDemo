<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/index_tv"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:background="@color/text_title"
        android:gravity="center_vertical"
        android:paddingLeft="8dip"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="12dip" />

    <RelativeLayout
        android:id="@+id/front_child"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_list"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/example_row_iv_image"
            android:layout_width="@dimen/size_list_image"
            android:layout_height="@dimen/size_list_image"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/example_row_tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/example_row_iv_image"
            android:ellipsize="middle"
            android:maxLines="2"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_title" />

        <TextView
            android:id="@+id/example_row_tv_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/example_row_tv_title"
            android:layout_toRightOf="@id/example_row_iv_image"
            android:ellipsize="middle"
            android:textColor="@color/text_description"
            android:textSize="@dimen/font_size_description" />
    </RelativeLayout>

</LinearLayout>